<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    tools:showIn="@layout/activity_menu">

    <ImageView
        android:id="@+id/imageViewLabelInfografico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/infograph_icon"
        android:layout_alignStart="@+id/infograph_icon"
        android:layout_alignTop="@+id/infograph_icon"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="107dp"
        app:srcCompat="@drawable/texto_infografico" />

    <ImageView
        android:id="@+id/imageViewLabelIndicacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/logo_app"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="49dp"
        app:srcCompat="@drawable/texto_indicacao" />

    <ImageView
        android:id="@+id/imageViewLabelBusca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="200dp"
        app:srcCompat="@drawable/texto_busca" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#89dbc5"
        app:srcCompat="@drawable/logo_app" />

    <ImageView
        android:id="@+id/search_icon"
        android:layout_width="140dp"
        android:layout_height="86dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/map"
        android:onClick="openSearchActivity"/>

    <ImageView
        android:id="@+id/infograph_icon"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="96dp"
        android:layout_toStartOf="@+id/search_icon"
        android:onClick="openInfographActivity"
        app:srcCompat="@drawable/smartphone" />

    <ImageView
        android:layout_width="102dp"
        android:layout_height="95dp"
        android:layout_alignTop="@+id/infograph_icon"
        android:layout_toEndOf="@+id/search_icon"
        app:srcCompat="@drawable/checked"
        android:id="@+id/logo_app"
        android:onClick="openIndicateActivity"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#89dbc5"
        />
</RelativeLayout>